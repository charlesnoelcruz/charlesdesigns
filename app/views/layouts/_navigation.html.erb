<header class="navbar navbar-bg">
  <div class="container-fluid">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
    <%= link_to "myRecipes", root_path, class: "navbar-brand", id: "logo" %>
    </div>
    <div class="collapse navbar-collapse" id="myNavbar">
      <ul class="nav navbar-nav">
        <li class="dropdown">
          <%= link_to "#", class: "dropdown-toggle", "data-toggle" => "dropdown" do %>
            Styles <b class="caret"></b>
            <% end %>
            <ul class="dropdown-menu">
              <% Style.all.each do |style| %>
                <li><%= link_to style.name, style_path(style) %></li>
              <% end %>
              <% if logged_in? %>
                <li class="divider"></li>
                <li>
                  <%= link_to(new_style_path) do %>
                  New Style
                  <% end %>
                </li>
              <% end %>
            </ul>
        </li>
        <li class="dropdown">
          <%= link_to "#", class: "dropdown-toggle", "data-toggle" => "dropdown" do %>
            Ingredients <b class="caret"></b>
            <% end %>
            <ul class="dropdown-menu">
              <% Ingredient.all.each do |ingredient| %>
                <li><%= link_to ingredient.name, ingredient_path(ingredient) %></li>
              <% end %>
              <% if logged_in? %>
                <li class="divider"></li>
                <li>
                  <%= link_to(new_ingredient_path) do %>
                  New Ingredient
                  <% end %>
                </li>
              <% end %>
            </ul>
        </li>
      </ul>  
      <% if logged_in? %>
        <ul class="nav navbar-nav navbar-right">
          <li><%= link_to "New Recipe", new_recipe_path %></li>
          <li class="dropdown">
            <%= link_to "#", class: "dropdown-toggle", "data-toggle" => "dropdown" do %>
              <%= current_user.chefname %> <b class="caret"></b>
              <% end %>
              <ul class="dropdown-menu">
                <li><%= link_to "View Profile", chef_path(current_user) %></li>
                <li><%= link_to "Edit Profile", edit_chef_path(current_user) %></li>
                <li class="divider"></li>
                <li><%= link_to "Logout", logout_path %></li>
              </ul>
          </li>
        </ul>
      <% else %>
        <ul class="nav navbar-nav navbar-right">
          <li><%= link_to "Sign up", register_path %>
          </li>
          <li><%= link_to "Log in", login_path %>
          </li>
        </ul>
      <% end %> 
    </div>
  </div>
</header>